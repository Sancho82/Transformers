<div class="container">
  <div class="row">
      <div class="col-12">
        <h2>Edit {{name}}</h2>
      </div>
  </div>
  <div>
    <form method="POST" action="/{{id}}?_method=PUT">
      <div class="form-group">
        <label for="faction">Faction</label>
        <input type="text" class="form-control" name="faction" value="{{faction}}" />
      </div>
      <div class="form-group">
        <label for="power">Power</label>
        <input type="text" class="form-control" name="power" value="{{power}}">
      </div>
      <input class="btn btn-success" type="submit" value="Update">
    </form>
  <br>
  <a href="/" class="btn btn-secondary">Back</a>  </div>
</div>